@model IEnumerable<Documento>

<div style="padding: 20px; font-family: 'Roboto', sans-serif; background-color: #f0f4f8; border-radius: 10px; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);">
    <h1 class="text-center" style="color: #333;">Arquivos de Texto</h1>

    <!-- Caixa arredondada para o botão de criar documento -->
    <div style="display: flex; justify-content: center; align-items: center; padding: 20px; 
                background: rgba(255, 255, 255, 0.9); 
                border-radius: 15px; 
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);">
        <div class="text-center mb-4">
            <a class="d-flex justify-content-center align-items-center"
               style="width: 150px; height: 150px; 
                      background: linear-gradient(145deg, #4b79a1, #283e51); 
                      border-radius: 50%; 
                      font-size: 100px; 
                      text-decoration: none; 
                      color: white; 
                      box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.3), 
                                  -4px -4px 10px rgba(255, 255, 255, 0.2); 
                      transition: transform 0.3s ease, background 0.3s ease;"
               asp-action="CriarDocumento"
               onmouseover="this.style.transform='scale(1.1)'; this.style.background='linear-gradient(145deg, #283e51, #4b79a1)';"
               onmouseout="this.style.transform='scale(1)'; this.style.background='linear-gradient(145deg, #4b79a1, #283e51)';">
                +
            </a>
        </div>
    </div>

    <hr style="border: 1px solid #ccc;">
    <br>

    <!-- Caixa arredondada para todos os arquivos salvos -->
    <div style="padding: 20px; 
                background: rgba(255, 255, 255, 0.9); 
                border-radius: 15px; 
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);">
        <h2 class="text-center mb-4" style="color: #333;">Arquivos Salvos</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-2 mb-4">
                    <!-- Centralizando a data de criação -->
                    <div style="display: flex; justify-content: center; align-items: center; text-align: center; margin-bottom: 10px;">
                        <span style="color: #777;">Criação: @item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>

                    <!-- Estilo da caixa de arquivo salvo -->
                    <div class="d-flex justify-content-center align-items-center"
                         style="width: 150px; height: 200px; 
                                background: linear-gradient(145deg, #4b79a1, #283e51); 
                                border-radius: 15px; 
                                font-size: 100px; 
                                box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.3), 
                                            -4px -4px 10px rgba(255, 255, 255, 0.2);">
                        <a style="text-decoration: none; color: white; font-size: 70px;" asp-action="EditarDocumento" asp-route-id="@item.Id">📝</a>
                    </div>

                    <!-- Centralizando o título do arquivo -->
                    <div style="display: flex; justify-content: center; align-items: center; text-align: center; margin-top: 10px;">
                        <span style="font-weight: bold; color: #333;">@item.Titulo</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
